<% if session[:user_id].nil? %>
    <h2 >Welcome back! Please sign in to continue ...</h2>
    <%=render 'shared/sign_in'%>
    <br/>
    <hr/>
    <br/>
    <h2>If you have not yet signed up for our services, click 'Sign Up' below  ðŸ‘‡</h2>
    <br/>
    <%= button_to "Sign Up", sign_up_path , :method => :get, class:"btn btn-primary btn-lg  btn-block w-100" %>
<% else %>
    <% if @user.email ==  "admin@vra.org" %>

    <% else %>
        <% if @all_vehicles.empty? %>
            <div class="no-vehicle-msg">
                <h1>We are sorry to inform you that all our vehicles are currently rented out. We appreciate your interest and encourage you to return later for availability. <br/><br/><br/>Thank you for your understanding.</h1>
